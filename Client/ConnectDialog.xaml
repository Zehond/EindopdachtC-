<Window x:Class="Client.ConnectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="ConnectDialog" Height="450" Width="800">
    <Grid Margin="0,0,0,230">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Server IP:" Margin="10"/>
        <TextBox x:Name="ServerIpBox" Grid.Row="1" Margin="10"/>

        <TextBlock Text="Port Number:" Grid.Row="2" Margin="10"/>
        <TextBox x:Name="PortNrBox" Grid.Row="3" Margin="10" PreviewTextInput="NumberValidationTextBox"/>

        <Button Content="Connect" Grid.Row="4" Margin="10" HorizontalAlignment="Right" Click="ConnectButton_Click"/>
    </Grid>
</Window>
